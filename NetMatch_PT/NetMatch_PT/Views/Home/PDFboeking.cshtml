    <script>
        function HTMLtoPDF(l) {
            var doc = new jsPDF();

            doc.fromHTML($('#toPDF').get(0), 20, 20, {
                'width': 700
            });

            doc.save('Bevestiging_Factuur.pdf')
        }
    </script>
</head>


<body>
    <header class="Header">
