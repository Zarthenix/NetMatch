<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - NetMatch_PT</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://kit.fontawesome.com/590950580f.js" crossorigin="anonymous"></script>
</head>
<body class="container-fluid">
<div class="row">
<header>
        <div class="col-md-12 navContainer">
            <img class="navBG" src="images/PT_HeaderBG.png" />
            <div class="row navFirstRow">
                <div class="col-md-3 navLogo">
                    <form action="#" class="form-inline" style="">
                        <input type="text" placeholder="Zoeken.." name="search" class="form-control">
                        <button type="submit" style="margin-left:5px"><i class="fa fa-search"></i></button>
                    </form>
                </div>
                <div class="col-md-4 offset-lg-1 align-self-end" style="height: 100%; max-width: 100%;">
                    <div style="height: 70%; max-width: 100%; margin-top: 10px;" class="offset-lg-4"><img class="navLogoImg" src="images/PT_CompName.png" /></div>
                    <nav class="navbar navbar-expand-sm  bg-primary navbar-dark" style="justify-content: space-around; border-radius: 10px">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="#">Accommodaties</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Boeken</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Partners</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Over ons</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="#">Contact</a>
                            </li>
                        </ul>

                    </nav>
                </div>
                <div class="col-md-2 offset-md-2 openingTimesHeader" style="font-weight: bold;">
                    Openingstijden: <br />
                    Maandag t/m vrijdag 09:00 - 17:00 <br />
                    Zaterdag 10:00 - 15:00<br />
                    Zondag gesloten
                </div>
            </div>
        </div>
</header>
</div>

<main role="main" class="pb-3">
    <div class="row">
        <div class="col-md-12">
            @RenderBody()
        </div>
    </div>
</main>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - NetMatch_PT - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
