@model NetMatch_PT.ViewModels.TravelOptionsVm

@{
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

}


<div class="modal-body">
    @if (Model.AccommodationId != 0)
    {
    <div class="container">
        <div class="row">
            <div class="col-6">
                <p> Aantal reisgenoten:</p>
            </div>
            <div class="col-6">
                <p> @Model.TravelPartners</p>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <p> Aantal Volwassenen:</p>
            </div>
            <div class="col-6">
                <p> @Model.Adults</p>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <p> Aantal Kinderen:</p>
            </div>
            <div class="col-6">
                <p> @Model.Children</p>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <p> Gekozen vertrekdatum:</p>
            </div>
            <div class="col-6">
                <p> @Model.Date.Date</p>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <p> Aantal kamers:</p>
            </div>
            <div class="col-6">
                <p> @Model.Rooms</p>
            </div>
        </div>

        <div class="form-group" hidden="hidden">
            <input asp-for="AccommodationId" class="form-control" />
        </div>
    </div>
    }
    else
    {
        <div>
            <h2> Nog geen reisopties geselecteerd</h2>
        </div>
    }
</div>


<div class="modal-footer">
    <a asp-area="" asp-controller="Home" asp-action="Reisboeken"><input type="button" class="btn btn-primary" value="boeken" /></a>
    <a asp-area="" asp-controller="Home" asp-action="Index"> Home</a>
</div>


