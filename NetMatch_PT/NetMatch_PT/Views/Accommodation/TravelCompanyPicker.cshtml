

<div class="modal-header">
    <h3>Reisgezelschap kiezer</h3>
</div>

<div class="modal-body">
    <div class="alert alert-warning">
        <span class="glyphicon glyphicon-warning-sign"></span>
        Reisgezelinfo
    </div>
</div>

<div class="modal-footer">
    <a class="btn btn-info DatePicker" data-href="/Accommodation/DatePicker">Terug</a>
    <a class="btn btn-info Receipt" data-href="/Accommodation/Receipt">Doorgaan</a>
</div>

<script>
    $(document).ready(function () {
        // Fill modal with content from link href
        $(".Receipt").on("click", function (e) {
            var link = $(this).data("href");
            $('#myModal .modal-body').load(link);
        });
    })
</script>

