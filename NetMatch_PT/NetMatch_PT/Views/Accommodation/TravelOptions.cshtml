@model NetMatch_PT.ViewModels.TravelOptionsVm


@{
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

}

<modal-content>
    <modal-header>
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Reisgezelschap kiezen</h4>
        </div>
    </modal-header>
    <modal-body>
        <form id="travelform" asp-action="TravelOptions" asp-controller="Accommodation" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#travelform">
            <div class="row">
                <p style="text-align:center">@ViewData["Description"]</p>
            </div>
            <div class="row">
                <div><img class="col-md-4" style="display:block; max-height:inherit" src="data:image/jpeg;base64, @Model.Accommodation.Image" /></div>
                <div class="col-md-2">@Model.Accommodation.Title</div>
                <div class="col-md-2">@Model.SelectDate.ToShortDateString()</div>
            </div>
            <div class="modal-body form-horizontal">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Adults" class="control-label"></label>
                    <input asp-for="Adults" class="form-control" />
                    <span asp-validation-for="Adults" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Children" class="control-label"></label>
                    <input asp-for="Children" class="form-control" />
                    <span asp-validation-for="Children" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rooms" class="control-label"></label>
                    <input asp-for="Rooms" class="form-control" />
                    <span asp-validation-for="Rooms" class="text-danger"></span>
                </div>
                <div class="form-group" hidden="hidden">
                    <input asp-for="AccommodationId" class="form-control" />
                </div>
                <div class="form-group" hidden="hidden">
                    <input asp-for="SelectDate" class="form-control" />
                </div>
            </div>
            <div class="modal-footer">
                <input id="confirm" type="submit" value="Bevestig keuzes" class="btn btn-default" />
            </div>
        </form>
    </modal-body>
</modal-content>