@model NetMatch_PT.ViewModels.AccommodationDetailVm;
@{
    ViewData["Title"] = "Voorbeeld Accommodatie";
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="~/css/AccommodationStyle.css" />
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
}

<div class="container">
    <div class="col-md-12 border-box">
        <div><h1 class="text-center" style="margin-top: 2%; margin-bottom: 2%;">@Model.Title</h1></div>

        <div class="col-md-12">
            <img src="data:image/jpeg;base64, @Model.Image" class="col-md-10 offset-md-1" />
        </div>

        <div class="justify-content-center" style="margin-top: 3%">
            <div class="col-md-10 offset-md-1 border-box-small row">
                <div class="col-md-6 offset-md-1 ">
                    <h3>Beschrijving:</h3>
                    <p>@Model.Description</p>
                </div>

                <div class="col-md-4 offset-md-1">
                    <h3>Datums:</h3>
                    <select>
                        <option value="null" selected disabled>Kies een datum</option>
                        @foreach (var item in Model.DatePrices)
                        {
                            <option value="@item.Date">@item.Date</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="col-md-12" style="margin-top: 3%; margin-bottom: 3%;">
            <div class="row justify-content-around">
                <button class="btn btn-primary">
                    <a href="javascript:void(0);" class="GetAll" style="font-size:16pt; color: white; text-decoration: none; ">Boekingsopties</a>
                </button>

                <a asp-action="Receipt" asp-controller="Accommodation"> Receipt test</a>
                
                <button class="btn btn-success">
                    <a asp-controller="Home" asp-action="ReisBoeken" style="font-size:16pt; color: white; text-decoration: none;">Boeken</a>
                </button>
            </div>
        </div>

        <div style="margin-top: 25%; position:absolute">
            <div id='myModal' class='modal' style="text-align: right;">
                <div class="modal-dialog" style="width: 100%; height: 60%; padding: 10px;">
                    <div class="modal-header"> Reisgezelschap kiezen</div>
                    <div class="modal-content" style="overflow: auto; padding: 10px; background-color: #d2f5f4;">
                        <div style="height: 10px;"></div>
                        <div id='myModalContent' style="width: 80%; height: 60%; padding: 10px;"></div>
                    </div>
                </div>
            </div>

            <script>

                        var ajaxCallURL = '/Accommodation/TravelOptions/@Model.Id';
                        $(function() {
                            $(".GetAll").click(function() {
                                var $buttonClicked = $(this);
                                var options = { "backdrop": "static", keyboard: true };
                                $.ajax({
                                    type: "GET",
                                    url: ajaxCallURL,
                                    contentType: "application/json; charset=utf-8",
                                    datatype: "json",
                                    success: function(data) {
                                        $('#myModalContent').html(data);
                                        $('#myModal').modal(options);
                                        $('#myModal').modal('show');
                                    },
                                    error: function() {
                                        alert("Content load failed.");
                                    }
                                });
                            });
                            $("#closbtn").click(function() {
                                $('#myModal').modal('hide');
                            });
                        });
            </script>
        </div>
    </div>
</div>