                                $(document).ready(function () {
                                    $("#clickbutton").click(function(){
                                        e.preventDefault();
                                        $.ajax({
                                            url: '@Url.Action("DatePicker", "Accommodation")',
                                            type: "POST",
                                            success: successFunc,
                                            error: errorFunc
                                        }).done(function (msg) {
                                            $("#showModal").html(msg);
                                            $("#myModal").modal();
                                        })
                                    });
                                });
                                                        </script>*@

                            <script>$(document).ready(function () {
                                    // Fill modal with content from link href
                                    $(".openModal").on("click", function (e) {
                                        var link = $(this).data("href");
                                        $('#myModal .modal-body').load(link);
                                        $('#myModal').modal("show");
                                    });
                                })</script>


                            <a asp-area="" asp-controller="Home" asp-action="Reisboeken"><input type="button" value="boeken" /></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>